<div class="panel-body">
  <%= simple_form_for(@post, html: { class: "form-horizontal"}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-group">
        <%= f.input :title, input_html: { rows: "1", :class => "form-control" } %>
      </div>  
      <div class="form-group">  
        <%= f.input :body, :as => :ckeditor, input_html: { rows: "5", :class => "form-control" } %>
      </div> 
      <div class="form-group">  
        <%= f.input :image, label: "Upload an image" %>
      </div> 
      <div class="form-group">
        <%= f.input :video, input_html: { rows: "1", :class => "form-control" }, :hint => "Enter a Youtube url of a performance from this album, or your own video review", label: "Enter a Youtube Link" %>
      </div> 
    </div>

    
    <%= f.button :submit, "Submit Post", class: "btn btn-primary" %>
    
  <% end %>
</div>
