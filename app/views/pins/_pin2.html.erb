<div class="box">
    <%= link_to (image_tag pin.image(:medium)), pin %>
  <p class="description">
    <strong><h5><%= truncate(pin.album, length: 50) %><h5></strong>
  </p>
  <p class="description">
    <strong><h5><%= pin.artist %> - <%= pin.year %><h5></strong>
  
  </p>
  <p>
    <strong>Posted by <%= link_to pin.user.name, pin.user %> </strong>
  </p>  
  <% if user_signed_in? %>
    <% if current_user == pin.user || current_user.admin? %>
      <p>
        <%= link_to 'Edit', edit_pin_path(pin) %>
        <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-trash"></i>
              Delete
        <% end %>
      </p>
      <p><%= link_to "Review This Abum", copy_pin_path(pin) %></p>
    <% end %> 
  <% end %> 
</div>  