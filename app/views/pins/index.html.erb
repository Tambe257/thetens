<div id="tag_cloud">
  Sort by: <% tag_cloud Pin.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name.downcase, tag_path(tag.name), class: "btn btn-primary" %>
  <% end %>
</div>

<div id="pins">
  <%= render @pins %>
</div>  

</br>

<%= will_paginate @pins, renderer: BootstrapPagination::Rails %>

